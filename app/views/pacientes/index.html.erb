<p id="notice"><%= notice %></p>

<h1 align="center">
<span class="label label-info">Lista Pacientes</span>
</h1>

<table class="table table-bordered" >
  <thead>
    <tr>
      <th>Identificador paciente</th>
      <th>Primer nombre persona</th>
      <th>Segundo nombre persona</th>
      <th>Apellido paterno persona</th>
      <th>Apellido materno persona</th>
      <th>Fecha de nacimiento</th>
      <th>Prevision</th>
      <th>Estado civil</th>
      <th>Grupo sanguineo</th>
      <th>Edad</th>
      <th>Correo</th>
      <th>Telefono</th>
      <th>Avenida calle domicilio</th>
      <th>Numero domicilio</th>
      <th>Departamento domicilio</th>
      <th>Comuna domicilio</th>
      <th>Ciudad domicilio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pacientes.each do |paciente| %>
      <tr>
        <td><%= paciente.identificador_paciente %></td>
        <td><%= paciente.primer_nombre_persona %></td>
        <td><%= paciente.segundo_nombre_persona %></td>
        <td><%= paciente.apellido_paterno_persona %></td>
        <td><%= paciente.apellido_materno_persona %></td>
        <td><%= paciente.fecha_de_nacimiento %></td>
        <td><%= paciente.prevision %></td>
        <td><%= paciente.estado_civil %></td>
        <td><%= paciente.grupo_sanguineo %></td>
        <td><%= paciente.edad %></td>
        <td><%= paciente.correo %></td>
        <td><%= paciente.telefono %></td>
        <td><%= paciente.avenida_calle_domicilio %></td>
        <td><%= paciente.numero_domicilio %></td>
        <td><%= paciente.departamento_domicilio %></td>
        <td><%= paciente.comuna_domicilio %></td>
        <td><%= paciente.ciudad_domicilio %></td>
        <td><%= link_to 'Show', paciente %></td>
        <td><%= link_to 'Edit', edit_paciente_path(paciente) %></td>
        <td><%= link_to 'Destroy', paciente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

